{% extends 'session/layout.njk' %}

  {% block content %}
    <div class="fields-container login-form">
      <form method="POST" action="/admin/users/password-reset">
        <div>
          <h3>Nova Senha</h3>
        </div>

        <div class="item">
          <p>Email</p>
          <input 
            type="text"
            placeholder="Digite seu email"
            name="email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
            />
        </div>

        <div class="item">
          <p>Nova senha</p>
          <input
            type="password"
            name="password"
            placeholder="Digite sua nova senha"
          >
        </div>

        <div class="item">
          <p>Repetir senha</p>
          <input
            type="password"
            name="passwordRepeat"
            placeholder="Repita sua nova senha"
          >
        </div>

        <div class="buttons form-btn">
          <button>Nova Senha</button>
        </div>
        <input type="hidden" name="token" value="{{token}}">
      </form>
    </div>
  {% endblock %}