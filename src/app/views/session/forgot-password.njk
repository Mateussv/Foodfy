{% extends 'session/layout.njk' %}

  {% block content %}
    <div class="fields-container login-form">
      <form method="POST" action="/admin/users/forgot-password">
        <div>
          <h3>Esqueceu a Senha?</h3>
        </div>

        <div class="item">
          <p>Email</p>
          <input 
            type="email"
            name="email"
            placeholder="Digite seu email para recuperar sua senha"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
          />
        </div>

        <div class="buttons form-btn">
          <button>Recuperar</button>
        </div>
      </form>
    </div>
  {% endblock %}