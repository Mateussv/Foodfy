{% extends 'session/layout.njk' %}

  {% block content %}
    <div class="fields-container login-form">
      <form method="POST" action="/admin/users/login">
        <div>
          <h3>Iniciar SessÃ£o</h3>
        </div>

        <div class="item">
          <p>Email</p>
          <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
            />
        </div>

        <div class="item">
          <p>Senha</p>
          <input type="password" name="password" placeholder="Digite sua senha">
        </div>

        <div class="buttons">
          <a href="/admin/users/forgot-password">Perdeu a senha?</a>
          <button>Acessar</button>
        </div>
      </form>
    </div>
  {% endblock %}