{% extends './layout.njk' %}

{% block content%}
  <section id="chefs-container">
    <div class= "cards-container">
    {% for chef in chefs %}
      <div id="chef-card">
        <a href="/chefs/{{ chef.id }}">
          <div>
            <img src="{{ chef.file.path }}" alt="Image of {{ chef.name }}"/>
          </div>

          <div>
            <h3 class="recipe-title">{{ chef.name }}</h3>
              <a href="/chefs/{{ chef.id }}">
                {% if chef.total_recipes > 1 %}{{chef.total_recipes}} receitas{% endif %}
                {% if chef.total_recipes == 0 %}Nenhuma receita cadastrada{% endif %}
                {% if chef.total_recipes == 1 %}{{chef.total_recipes}} receita{% endif %}
              </a>    
          </div>
        </a>
      </div>
    {% endfor %}
    </div>
  </section>
{% endblock %}
