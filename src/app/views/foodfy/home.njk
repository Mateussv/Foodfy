{% extends './layout.njk' %}

{% block content %}
  <section class="container">
    <div class="container-txt">
      <h1>The best recipes</h1>
      <p>Learn how to build the best dishes
        <br/>
        with recipes created by professionals
        <br/>
        from around the world.
      </p>
    </div>

    <div class="container-img">
      <img src="./assets/chef.png" alt="chef"/>
    </div>
  </section>

  <main id="recipes">
    <h2>Most accessed</h2>
    <div id="cards">
      {% for item in items %}
        <a class="recipe-card" href="/recipes/{{ item.id }}">
          <img src="{{ item.src }}" alt="Image of {{ item.title }}"/>
          <h3 class="recipe-title">{{ item.title }}</h3>
          <p class="author">by {{ item.chef_name }} {{ item.author }}</p>
        </a>
      {% endfor %}
    </div>
  </main>
{% endblock %}
