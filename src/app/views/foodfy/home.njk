{% extends './layout.njk' %}

{% block content %}
  <section class="container">
    <div class="container-txt">
      <h1>The best recipes</h1>
      <p>Learn how to build the best dishes
        <br/>
        with recipes created by professionals
        <br/>
        from around the world.
      </p>
    </div>

    <div class="container-img">
      <img src="./assets/chef.png" alt="chef"/>
    </div>
  </section>

  <main id="recipes">
    <h2>Most accessed</h2>
    <div id="cards">
      {% for recipe in recipes %}
        <a class="recipe-card" href="/recipes/{{ recipe.id }}">
        {% if not recipe.file  %}
          <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO">
          {% else %}
        <img src="{{ recipe.file.path }}" alt="Image of {{ recipe.title }}"/>
        {% endif %}
        <h3 class="recipe-title">{{ recipe.title }}</h3>
        <p>
      {% if recipe.chef_name == null %}por Chef An√¥nimo{% endif %}
      {% if recipe.chef_name != null %}por {{recipe.chef_name}}{% endif %}
       </p>
        </a>
      {% endfor %}
    </div>
  </main>
{% endblock %}
