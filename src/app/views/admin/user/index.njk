{% extends 'layout.njk' %}

{% block content %}

    <div class="users-header">
      <h3>Usu√°rios</h3>
      <a href="/admin/users/create">Novo</a>
    </div>

    <section class="users-container">
    {% for user in users %}
      <div class="user-card">
        <div>
          <p>{{user.name}}</p>
          <p>{{user.email}}</p>
        
          <a href="/admin/users/{{user.id}}">Editar</a>
          <form
            id="form-delete"
            method="POST"
            action="/admin/users?_method=DELETE"
          >
            <input type="hidden" name="id" value="{{user.id}}">
            <button class="remove" type="submit">Remover</button>
          </form>
        </div>
      </div> 
    {% endfor %}
    </section>
    <script>
      const formDelete = document.querySelectorAll("#form-delete")
      formDelete.forEach(form => form.addEventListener("submit", function (event) {
        const confirmation = confirm("Deseja deletar?")
        if (!confirmation) {
          event.preventDefault()
        }
      }))
    </script>
{% endblock %}