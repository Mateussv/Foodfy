   <div>
    <p>Recipe name</p>
    <input type="text" name="title" value="{{ recipe.title }}">
  </div>
  

  <div>
    <p>Chef</p> 
    <select name="chef_id">
      {% for chef in chefOptions%}
        <option
          value="{{ chef.id }}"
          {% if recipe.chef_id == chef.id %} selected {%endif%}
        >{{ chef.name }}
        </option>

        <option selected disabled hidden>Select chef</option>
      {% endfor %}
    </select>
  </div>

 
  <div id="ingredients-container">
    <p>Ingredients</p>
    <div class="ingredient">
      {% if (recipe.ingredients.length > 0) %}
        {% for ingredient in recipe.ingredients %}
          <input 
            type="text" 
            name="ingredients[]" 
            value="{{ ingredient }}"
          >
        {% endfor %}
      {% else %}
        <input 
          type="text" 
          name="ingredients[]" 
          placeholder="Add ingredients">
      {% endif %}
    </div>
  </div>

  <a class="add-ingredient" onclick="addIngredient()">Add ingredient</a>

  <div id="steps-container">
    <p>Preparation</p>
    <div class="step">
      {% if (recipe.preparation.length > 0) %}
        {% for preparation in recipe.preparation %}
          <input 
            type="text" 
            name="preparation[]" 
            value="{{ preparation }}"
          >
        {%endfor%}
      {% else %}
          <input 
            type="text" 
            name="preparation" 
            placeholder="Add preparation steps"
          >
      {% endif %}
    </div>
  </div>

  <a class="add-step" onclick="addStep()">Add new step</a>

  <div>
    <p>Informações adicionais</p>
    <textarea name="information" rows="10">{{ recipe.information}}</textarea>
  </div>

  <script src="/script.js"></script>