{% extends '../layout.njk' %}

  {%block content%}
    <h2>Gerenciar chefs</h2>

    <section id="chefs-container">
      {% for chef in chefs %}
        <div id="chef-card">
          <a href="/admin/chefs/{{ chef.id }}">
            <div>
              <img src="{{ chef.avatar_url }}" alt="Image of {{ chef.name }}"/>
            </div>
            
            <div>
              <h3 class="recipe-title">{{ chef.name }}</h3>
              <a href="/admin/chefs/{{ chef.id }}">Visualizar</a>
            </div>
          </a> 
        </div>
      {% endfor %}
    </section>

    <div class="pagination"
      data-page= "{{ pagination.page }}"
      data-total="{{ pagination.total }}"
      data-filter="{{ filter}}">
    </div>
  {%endblock%}
    