<div>
  <div>
    <p>Recipe image</p>
    <input type="url" name="image" placeholder="Image URL" value="{{ recipe.image_url }}">
  </div>

  <p>Ingredients</p>
  <div id="ingredients">
    <div class="ingredient">
      {% if (recipe.ingredients.length > 0) %}
        {% for ingredient in recipe.ingredients %}
            <input type="text" name="ingredients[]" value="{{ ingredient }}">
        {% endfor %}
      {% else %}
        <input type="text" name="ingredients[]" placeholder="Add ingredients" required>
      {% endif %}
    </div>
  </div>

  <a class="add-ingredient">Add ingredient</a>

  <div>
    <p>Preparation</p>
    {% if (recipe.preparation.length > 0) %}
      {% for preparation in recipe.preparation %}
        <input type="text" name="preparation" value="{{ preparation }}">
      {%endfor%}
    {% else %}
        <input type="text" name="preparation" placeholder="Add preparation steps" required>
    {% endif %}
  </div>

  <a href="#">Add new step</a>

  <div>
    <p>Informações adicionais</p>
    <textarea name="information" rows="10">{{ recipe.information }} </textarea>
  </div>
</div>

      